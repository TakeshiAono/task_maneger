<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<%= form_with(url: tasks_path, method: :get, scope: 'search', local: true) do  |f| %>
  <%= f.label :title_search %>
  <%= f.text_field :title_search %>
  <%= f.label :status_search %>
  <%= f.select :status_search, Task.status_input_restriction %>
  <%= f.submit "search" %>
<% end %>

<table>
  <thead>
    <tr>
      <%# <th>User</th> %>
      <th>Title</th>
      <th><%= link_to "Priority", tasks_path(sort_priority: "true") %></th>
      <%# <th><%= link_to "Deadline", sort_tasks_path %>
      <th><%= link_to "Deadline", tasks_path(sort_expired: "true") %></th>
      <th>Status</th>
      <th>created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class ="task_row">
        <%# <><%= task.user_id %>
        <td><%= task.title %></td>
        <td><%= Task::priority_cord[task.priority] %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>

<%= paginate @tasks %>
