<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <%# <th>User</th> %>
      <th>Title</th>
      <th>Priority</th>
      <%# <th><%= link_to "Deadline", sort_tasks_path %>
      <th><%= link_to "Deadline", tasks_path(sort_expired: "true") %></th>
      <th>Status</th>
      <th>created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class ="task_row">
        <%# <><%= task.user_id %>
        <td><%= task.title %></td>
        <td><%= task.priority %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

